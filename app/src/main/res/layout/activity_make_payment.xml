<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.MakePaymentActivity">

    <TextView
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Payment Mode"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_below="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/mpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mpesa"
            android:checked="true"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textSize="18dp"/>



    </RadioGroup>

    <TextView
        android:id="@+id/dtxt"
        android:layout_below="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Date Of Delivery "
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/deliverdate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundedt"
        android:ems="5"
        android:layout_below="@id/dtxt"
        android:hint="Delivery date" />

    <TextView
        android:id="@+id/d2txt"
        android:layout_below="@+id/deliverdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Leave us With your feedback "
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/feedBackedt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/d2txt"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedt"
        android:hint="Feeback"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40sp"
        android:background="@drawable/buttonview"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />





</RelativeLayout>