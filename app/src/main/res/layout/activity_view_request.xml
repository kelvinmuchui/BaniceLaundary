<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ViewRequestActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/llPdf"
        android:background="#fff"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wash"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/wash"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wash and Fold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/wash"
            android:layout_marginLeft="20dp"
            android:id="@+id/washFold"
            android:textSize="20dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ironing"
            android:layout_marginTop="10dp"
            android:layout_below="@id/washFold"
            android:layout_marginLeft="20dp"
            android:id="@+id/ironing"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider"
            android:id="@+id/selectedprovider"
            android:layout_below="@+id/ironing"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="name"
            android:id="@+id/selectedprovidername"
            android:layout_below="@+id/ironing"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Location"
            android:id="@+id/selectedpicklocation"
            android:layout_below="@+id/selectedprovider"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:id="@+id/selectedplocationname"
            android:layout_below="@+id/selectedprovider"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick time"
            android:id="@+id/selectedpicktime"
            android:layout_below="@+id/selectedplocationname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/selectedptimename"
            android:layout_below="@+id/selectedplocationname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:id="@+id/selectedpaymode"
            android:layout_below="@+id/selectedpicktime"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mpesa"
            android:id="@+id/selectedpmodename"
            android:layout_below="@+id/selectedpicktime"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Date"
            android:id="@+id/selectedpaydate"
            android:layout_below="@+id/selectedpmodename"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/selectedpaydatename"
            android:layout_below="@+id/selectedpmodename"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Date"
            android:id="@+id/selectedddate"
            android:layout_below="@+id/selectedpaydate"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/selectedddatename"
            android:layout_below="@+id/selectedpaydate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/editbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_below="@id/selectedddatename"
            android:layout_marginTop="50dp"
            android:layout_margin="40sp"
            android:background="@drawable/centre_button"
            android:text="Edit"
            android:textColor="@color/whiteTextColor" />
        <Button
            android:id="@+id/downnloadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectedddatename"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_margin="40sp"
            android:background="@drawable/centre_button"
            android:text="Download"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>